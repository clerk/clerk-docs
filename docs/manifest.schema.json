{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "navigation": {
      "$ref": "#/$defs/nav"
    }
  },
  "$defs": {
    "nav": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/nav_group"
      }
    },
    "nav_group": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/nav_item"
      }
    },
    "nav_item": {
      "oneOf": [
        {
          "$ref": "#/$defs/link_item"
        },
        {
          "$ref": "#/$defs/sub_nav_item"
        }
      ]
    },
    "link_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "href"],
      "properties": {
        "title": {
          "type": "string"
        },
        "href": {
          "type": "string",
          "examples": ["/docs/quickstarts/nextjs", "https://example.com"]
        },
        "tag": {
          "type": "string",
          "examples": ["Community", "Beta"]
        },
        "wrap": {
          "type": "boolean",
          "default": true
        },
        "icon": {
          "$ref": "#/$defs/icon"
        },
        "target": {
          "type": "string",
          "enum": ["_blank"]
        }
      }
    },
    "sub_nav_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "items"],
      "properties": {
        "title": {
          "type": "string"
        },
        "items": {
          "$ref": "#/$defs/nav"
        },
        "collapse": {
          "type": "boolean",
          "default": false
        },
        "tag": {
          "type": "string",
          "examples": ["Community", "Beta"]
        },
        "wrap": {
          "type": "boolean",
          "default": true
        },
        "icon": {
          "$ref": "#/$defs/icon"
        }
      }
    },
    "icon": {
      "type": "string",
      "enum": [
        "apple",
        "application-2",
        "arrow-up-circle",
        "astro",
        "angular",
        "block",
        "bolt",
        "book",
        "box",
        "c-sharp",
        "chart",
        "checkmark-circle",
        "clerk",
        "code-bracket",
        "cog-6-teeth",
        "door",
        "elysia",
        "gatsby",
        "globe",
        "go",
        "home",
        "hono",
        "javascript",
        "koa",
        "link",
        "linkedin",
        "lock",
        "nextjs",
        "nodejs",
        "plug",
        "plus-circle",
        "react",
        "redwood",
        "remix",
        "rocket",
        "route",
        "ruby",
        "rust",
        "speedometer",
        "stacked-rectangle",
        "svelte",
        "user-circle",
        "user-dotted-circle",
        "vue",
        "x"
      ]
    }
  }
}
