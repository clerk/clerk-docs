{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["navigation"],
      "properties": {
        "$schema": {
          "type": "string"
        },
        "banner": {
          "$ref": "#/$defs/banner"
        },
        "navigation": {
          "$ref": "#/$defs/nav"
        }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["paths"],
      "properties": {
        "$schema": {
          "type": "string"
        },
        "banner": {
          "$ref": "#/$defs/banner"
        },
        "paths": {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9/-]+$": {
              "type": "object",
              "additionalProperties": false,
              "required": ["name", "href", "navigation"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "href": {
                  "type": "string"
                },
                "icon": {
                  "$ref": "#/$defs/icon"
                },
                "banner": {
                  "type": "string"
                },
                "navigation": {
                  "$ref": "#/$defs/nav"
                }
              }
            }
          }
        }
      }
    }
  ],
  "$defs": {
    "nav": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/nav_group"
      }
    },
    "nav_group": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/nav_item"
      }
    },
    "nav_item": {
      "oneOf": [
        {
          "$ref": "#/$defs/link_item"
        },
        {
          "$ref": "#/$defs/sub_nav_item"
        }
      ]
    },
    "link_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "href"],
      "properties": {
        "title": {
          "type": "string"
        },
        "href": {
          "type": "string",
          "examples": ["/docs/quickstarts/nextjs", "https://example.com"]
        },
        "tag": {
          "type": "string",
          "examples": ["Community", "Beta"]
        },
        "wrap": {
          "type": "boolean",
          "default": true
        },
        "icon": {
          "$ref": "#/$defs/icon"
        },
        "target": {
          "type": "string",
          "enum": ["_blank"]
        }
      }
    },
    "sub_nav_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "items"],
      "properties": {
        "title": {
          "type": "string"
        },
        "items": {
          "$ref": "#/$defs/nav"
        },
        "collapse": {
          "type": "boolean",
          "default": false
        },
        "tag": {
          "type": "string",
          "examples": ["Community", "Beta"]
        },
        "wrap": {
          "type": "boolean",
          "default": true
        },
        "icon": {
          "$ref": "#/$defs/icon"
        }
      }
    },
    "banner": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["text"],
          "properties": {
            "text": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": ["note", "important", "warning", "caution", "tip"]
            },
            "title": {
              "type": "string"
            },
            "cta": {
              "type": "string"
            },
            "href": {
              "type": "string"
            }
          }
        }
      ]
    },
    "icon": {
      "type": "string",
      "enum": [
        "application-2",
        "arrow-up-circle",
        "astro",
        "block",
        "bolt",
        "book",
        "box",
        "c-sharp",
        "chart",
        "checkmark-circle",
        "clerk",
        "code-bracket",
        "cog-6-teeth",
        "door",
        "elysia",
        "gatsby",
        "globe",
        "go",
        "home",
        "hono",
        "javascript",
        "link",
        "linkedin",
        "lock",
        "nextjs",
        "nodejs",
        "plug",
        "plus-circle",
        "react",
        "redwood",
        "remix",
        "rocket",
        "route",
        "ruby",
        "rust",
        "speedometer",
        "stacked-rectangle",
        "svelte",
        "user-circle",
        "user-dotted-circle",
        "vue",
        "x"
      ]
    }
  }
}
